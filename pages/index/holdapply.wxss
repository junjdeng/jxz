/* pages/index/holdapply.wxss */
page{background: #f5f5f5;}
.container{margin: 20rpx; width: 710rpx;}
.list_header{background: #fff; padding: 20rpx; margin-bottom: 20rpx; border-radius: 8rpx;
color: #302C3D; font-size: 24rpx; line-height: 48rpx; width: 670rpx;}
.list_header .title{color: #3478FF; font-size: 32rpx; line-height: 80rpx;}


.apply_form{width: 100%;}
.form_item{background: #fff; margin-bottom: 20rpx; border-radius: 8rpx;}
.form_item .item_title{color: #302C3D; font-size: 32rpx; line-height: 110rpx;}
.form_item .item_title span{color: #FF4F00; }
.form_item input{text-align: right; font: 28rpx; padding: 0 20rpx;}

.actions{width: 710rpx; margin-top: 40rpx;}
.actions button{background: #00B9FF; color:#fff; margin-bottom: 40rpx;}
.error{color: #302C3D; font-size: 24rpx; line-height: 40rpx; text-align: left;}
.error text{color: #FF4F00;}

.cover{position: fixed; top: 0; left: 0; z-index: 100; height: 100%; width: 100%; background-color: rgba(0, 0, 0, 0.3);}
.modal{background: #fff; width: 400rpx; margin: 200rpx auto; padding: 20rpx; border-radius: 8rpx; color: #999999;
font-size:24rpx; line-height: 50rpx;text-align: center;}
.modal .title{color: #333; font-size:32rpx; font-weight: 600;}
.modal image{width: 160rpx; height: 160rpx; position: relative; top: -80rpx;}
.modal button{margin: 50rpx 100rpx; height: 70rpx; border-radius: 35rpx; background: #3478FF; font-size: 28rpx; color: #fff; }