page{background: #f5f5f5;}
.minebg{height: 320rpx; width: 100%;}
.mine_card{padding: 20rpx 30rpx; width: 650rpx; background: #fff; position: absolute; top: 200rpx; border-radius: 8rpx;}

.mine_card_top{border-bottom: 1px solid #EBEBEB; padding: 20rpx 0; font-size: 24rpx; color: #302C3D; line-height: 35rpx;}
.mine_card_top .name{ font-size: 30rpx; font-weight: 600; line-height: 65rpx;}
.mine_card_top image{width: 100rpx; height: 100rpx; border-radius: 50%; background: gray;}

.actions{padding: 40rpx 0 20rpx 0;}
.actionBtn{text-align: center; color: #302C3D; font-size: 24rpx;}
.actionBtn image{width: 50rpx; height: 50rpx;}
.actionBtn view{line-height: 48rpx;}

.sesstion{margin-bottom: 40rpx;}
.mine_list{position: relative; top: 290rpx; width: 100%; line-height: 120rpx;}
.list_item{height: 120rpx; margin-bottom: 4rpx; background: #fff; padding: 0 40rpx; font-size: 36rpx;
color: #302C3D; vertical-align: middle;}
.list_item image{width: 40rpx; height: 40rpx; margin-right: 20rpx; position: relative; top: 8rpx;}



.cover{position: fixed; top: 0; left: 0; z-index: 100; height: 100%; width: 100%; background-color: rgba(0, 0, 0, 0.3);}
.modal{width: 500rpx; margin: 150rpx auto; padding: 20rpx; border-radius: 8rpx; color: #999999;
font-size:24rpx; line-height: 50rpx; background-size: 100% 100%; background-color: #fff; position: relative; z-index: 99;}
.modal .title{color: #fff; font-size:60rpx; font-weight: 600; line-height: 120rpx;text-align: center;}
.modal .subtitle{color: #302C3D; font-size:28rpx; padding: 30rpx; margin-top: 200rpx;}
.modal image{width: 160rpx; height: 160rpx; position: relative; margin-left: 30rpx;}
.modal .tips{font-size: 32rpx; color: #F65C38; position: absolute; right: 30rpx; bottom: 80rpx;}
.modal .tips1{font-size: 20rpx; color: #302C3D; position: absolute; right: 30rpx; bottom: 30rpx;}

.modal .subtitle1{color: #fff; font-size:28rpx; padding: 30rpx; text-align: center;}
.modal .image1{width: 320rpx; height: 320rpx; margin: 100rpx 140rpx 30rpx 90rpx;}

